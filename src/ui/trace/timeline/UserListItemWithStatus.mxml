<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="150" height="22" 
		   horizontalScrollPolicy="off" verticalScrollPolicy="off">
	
	<mx:Script>
		<![CDATA[
			import mx.utils.ColorUtil;
			import com.lyon2.visu.model.vo.User;

		]]>
	</mx:Script>

	<mx:Canvas height="16" backgroundColor="{ColorUtil.adjustBrightness(data.color,50)}" cornerRadius="5" borderColor="#000000" borderStyle="solid" borderThickness="0"  right="10" left="10" verticalCenter="0">
		<mx:Label text="{data.toString()}" fontSize="12" height="21" y="0" right="3" left="11" textAlign="left" fontWeight="bold" fontFamily="Arial" color="0x000000">
		</mx:Label>
	</mx:Canvas>
	
	<mx:Canvas x="0" width="16" height="16" backgroundColor="{data.color}" verticalCenter="0">
			<mx:Image source="@Embed('userStatusIcon/online.png')"  visible="{data.status == User.ONLINE}" verticalCenter="0" horizontalCenter="0"/>
			<mx:Image source="@Embed('userStatusIcon/offline.png')"  visible="{data.status == User.OFFLINE}" verticalCenter="0" horizontalCenter="0"/>
			<mx:Image source="@Embed('userStatusIcon/inroom.png')"  visible="{data.status == User.IN_A_ROOM}" verticalCenter="0" horizontalCenter="0"/>
			<mx:Image source="@Embed('userStatusIcon/recording.png')"  visible="{data.status == User.RECORDING}" verticalCenter="0" horizontalCenter="0"/>
	</mx:Canvas>

	
</mx:Canvas>
